<%= content_for(:title, "Contact") %>
<section>
    <div class="dg-contact about">
        <div class="container-about">
           <h1 class="animated wow fadeInUpBig animated">Contact us </h1>
        </div>
    </div>
</section>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="row">
            <div class="col-md-6 col-sm-6"><br/>
                <%= image_tag("office.jpg", :alt => "Vubon Roy", class: "img-responsive animated wow fadeInUpBig animated" ) %>
            </div>
            <div class="col-md-6 col-sm-6">
                <h3>Life At Code</h3>
                <p><span class="fa fa-home icon_color"> Address:</span>  Kalitola, Dinajpur-5200, Bangladesh</p>
                <p><span class="fa fa-envelope-o icon_color"> E-mail:</span><a href="mailto:vubon.roy@gmail.com"> vubon.roy@gmail.com</a></a></p>
                <p><span class="fa fa-phone icon_color"> Phone: </span><a href="tel:+8801737399296">+8801737399296</a></p>
                <p><span class="fa fa-skype icon_color"> Skype: </span>vubon.roy</p>
            </div>
        </div>
        <hr>
        <h3>Send A message to Us</h3>
        <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        
            <%= f.input :name, :required => true , :class=> "form-control", placeholder: 'Name*', label: false %>
            <%= f.input :email, :required => true, :class=> "form-control" , placeholder: 'Enter email*', label: false %>
            <%= f.input :subject, :class=> "form-control" , placeholder: 'Subject', label: false %>
            <%= f.input :message, :as => :text, :required => true, label: false, placeholder: 'Enter Your Message', :input_html => { class: 'form-control', :cols => 5, :rows => 10 } %>

           <div class= "hidden">
              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
            </div>
            <%= f.button :submit, 'Send message', :class=> "btn btn-default submit_button" %>
        <% end %>
    </div><br/>
    <div class="col-md-6 col-sm-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3596.914431436079!2d88.64237981495287!3d25.640965319845467!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39fb52bb3d5a9357%3A0x1d70f088c20bdd08!2sVubon!5e0!3m2!1sen!2sbd!4v1457628381541" width="100%" height="640" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
  </div>
</div>
